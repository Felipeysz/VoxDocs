@model VoxDocs.ViewModels.PlanosViewModel

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>VoxDocs - Gestão Documental Inteligente</title>
    <!-- Otimização: Pré-conexão com CDNs -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/Index/Index.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <!-- Exibição de Mensagem de Erro -->
    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger alert-dismissible fade show fixed-top m-3" role="alert">
            @ViewBag.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- VLibras -->
    @await Html.PartialAsync("_VlibrasPartial")

    <!-- Navbar -->
    @await Html.PartialAsync("_NavbarPartial")

    <!-- Hero Section -->
    @await Html.PartialAsync("_HeroPartial")

    <!-- Destaques -->
    @await Html.PartialAsync("_DestaquesPartial")

    <!-- Comparação de Planos -->
    @await Html.PartialAsync("_ComparacaoPlanosPartial", Model)

    <!-- Planos -->
    @await Html.PartialAsync("_PlanosPartial", Model)

    <!-- Perguntas Frequentes -->
    @await Html.PartialAsync("_FaqPartial")

    <!-- CTA Final -->
    @await Html.PartialAsync("_CtaFinalPartial")

    <!-- Modal de Carregamento -->
    @await Html.PartialAsync("_LoadingModalPartial")

    <!-- Assistente de Voz - Somente para usuários logados -->
    @if (Model.IsUserAuthenticated)
    {
        @await Html.PartialAsync("_VoiceAssistantModal")
    }

    @await Html.PartialAsync("_ScriptsPartial")

</body>
</html>