@model VoxDocs.ViewModels.ResetPasswordViewModel
@{
    ViewData["Title"] = "Redefinir Senha â€¢ VoxDocs";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/AuthStyles/styleRecuperarSenha.css" />
</head>
<body>
    <div class="login-card" data-aos="fade-up" data-aos-duration="1000">
        <div class="text-center">
            <img src="~/img/VoxDox sem fundo.png" alt="Logo" class="logo">
            <div class="title">Redefinir senha</div>
            <div class="subtitle">Digite sua nova senha</div>
        </div>

        <form asp-action="ResetPassword" asp-controller="AuthMvc" method="post">
            <input type="hidden" asp-for="Token" />
            <div asp-validation-summary="All" class="text-danger"></div>
            
            <div class="form-group" data-aos="fade-up" data-aos-delay="100">
                <input asp-for="NewPassword" type="password" class="form-control" placeholder="Nova senha" required />
                <span class="material-symbols-outlined">lock</span>
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            
            <div class="form-group" data-aos="fade-up" data-aos-delay="200">
                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirme a nova senha" required />
                <span class="material-symbols-outlined">lock_reset</span>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            
            <div class="d-grid" data-aos="zoom-in" data-aos-delay="300">
                <button type="submit" class="btn btn-accent btn-lg rounded-pill">Redefinir Senha</button>
            </div>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
    <script>
        AOS.init();
    </script>
</body>
</html>